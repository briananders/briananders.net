---
layout: blank
---


<style>
  html {
    background-color: #ffffff;
    color: #212121;
  }
  @media (prefers-color-scheme: dark) {
    html {
      background-color: #212121;
      color: #ffffff;
    }
  }
</style>

<%- partial('header', locals); %>

<main class="<%- (locals.pageClasses) ? locals.pageClasses.toString().replace(/,/g,' ') : '' %>">
  <% if (locals.description && !locals.homepage) { %>
    <div class="content description" itemprop="description">
      <p>
        <%- noWidows(locals.description); %>
      </p>
    </div>
  <% } %>

  <%- content %>

</main>

<%- partial('footer', locals); %>

<script src="/scripts/all.js" async defer></script>
<%
  if(locals.scripts) {
    locals.scripts.forEach((path) => { %>
  <script src="/scripts/<%- path %>.js" async defer></script>
<%
    });
  }
%>
