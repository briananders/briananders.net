<div class="container">
  <p>
    <%- noWidows(`In a ${link('separate post', { href: '/posts/last-fm' })}, you can peruse my top albums and artists for various timeframes, all going back from the present. For example, you can view my top listens from the last 3 months. It's been fascinating to observe how my listening habits have evolved over time, as well as how they've remained consistent.`) %>
  </p>
</div>

<div class="p">
  <year-selector id="year-selector" min="2013" max="2023" value="2023"></year-selector>
</div>

<section>
  <div class="container">
    <h2>Artists</h2>
    <div id="artists" class="p">
      <% for (let i = 0; i < 10; i++) { %>
        <artist-listing></artist-listing>
      <% } %>
      <div class="center">
        <%- externalLink("More", { href: "#", class: "button more" }) %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <h2>Albums</h2>
    <div id="albums">
      <% for (let i = 0; i < 10; i++) { %>
        <album-listing></album-listing>
      <% } %>
      <div class="center">
        <%- externalLink("More", { href: "#", class: "button more" }) %>
      </div>
    </div>
  </div>
</section>

