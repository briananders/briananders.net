<%
  const deferStyles = locals.deferStyles || false;
  const inlineStyles = locals.inlineStyles || false;
  const inlineSVGs = locals.inlineSVGs || false;
  const customFonts = locals.customFonts || false;
  const customFontsDeferred = locals.customFontsDeferred || false;
  const customFontsSwap = locals.customFontsSwap || false;
%>

<head>
  <%- partial('head/meta', locals); %>

  <% if (customFonts) { %>
    <%- partial('head/fonts', locals); %>
  <% } %>
  <% locals.styles.forEach((path) => { %>
    <%- partial('head/styles', { ...locals, path }); %>
  <% }); %>
</head>
<body>

  <%- partial('head/scripts', locals); %>

  <%- partial('header', locals); %>

  <main class="coyote-drums">
    <section class="intro">
      <div class="container">
        <header>
          <h2>
            <%- noWidows('Who am I?'); %>
          </h2>
        </header>
        <p>
          <%- noWidows(`I am Brian Anders, a Staff UX Engineer at ${externalLink('Google', { href: 'https://google.com' })}. From 2013 to 2018, I worked on ${externalLink('nest.com', { href: 'https://nest.com' })} as a UX Engineer. Since 2018 I have been working on the ${externalLink('Google Store', { href: 'https://store.google.com' })}; building and enhancing the web experience.`); %>
        </p>
        <p>
          <%- noWidows(`Outside of work, I cohost a podcast about Batman with my friend ${externalLink('Alex Cash', { href: 'http://alexcash.com' })}, called ${externalLink('Bat Lessons', { href: locals.batLessons })}. I also record drum covers for my ${externalLink('YouTube channel', { href: locals.coyoteDrums.youtube })}, called ${link('Coyote Drums', { href: locals.coyoteDrums.path })}.`); %>
        </p>
        <p>
          <%- noWidows(`I have a strong passion for music.  In my free time, I listen to a lot of music, play some other instruments, and try to keep up with a lot of different podcasts.`); %>
        </p>
        <p>
          You can find him on the internet in some other places.
          <% const contactLinks = [
              { copy: 'Twitter', url: locals.twitter, },
              { copy: 'Last.fm', url: locals.lastfm, },
              { copy: 'Github', url: locals.github, },
              { copy: 'LinkedIn', url: locals.linkedin, },
            ].map(item => externalLink(item.copy, {
              href: item.url,
              itemprop: 'url',
              target: 'blank',
              rel: 'noopener',
            }));
          %>
          <%- contactLinks.join(', '); %>.
        </p>
      </div>
    </section>

    <% if (inlineSVGs) { %>
      <div class="coyote-drums-logo container">
        <style>
          .coyote-drums .coyote-drums-logo {
            width: min(100%, 400px);
          }
          .coyote-drums .coyote-drums-logo svg {
            width: 100%;
            height: auto;
          }
        </style>
        <%- getFileContents('/images/coyote-drums/logo.svg'); %>
      </div>
    <% } else { %>
      <div class="coyote-drums-logo container">
        <style>
          .coyote-drums .coyote-drums-logo {
            width: min(100%, 400px);
          }
        </style>
        <%- img({
          src: '/images/coyote-drums/logo.svg',
          alt: 'Coyote Drums logo',
          width: '400',
          height: '400',
        }); %>
      </div>
    <% } %>

    <section>
      <div class="container">
        <p>
          <%- noWidows('Coyote Drums is my brand for drum covers. I grew up loving all kinds of rock and punk music. When I was younger, I played in concert band, jazz band, and the orchestra. Over time, I have focused more and more time and energy on playing to the music that I love listening to.'); %>
        </p>
        <p>
          <%- noWidows('Hardcore and emo bands like Emery and Underoath are my favorite to play to. I also play lots of music that features Travis Barker. Someday, I will write my own music, but for now I will continue posting drum cover videos.'); %>
        </p>
      </div>
    </section>

    <section>
      <header class="container">
        <h2>
          Social Channels
        </h2>
      </header>
      <div class="container social-profiles">
        <%- externalLink(`
            <span class="social-icon">${lazyImage({ src: '/images/coyote-drums/instagram-icon.svg' })}</span>
            <span role="heading" aria-level="3" class="h4">Instagram</span>
            <span class="h5">@coyote.drums</span>
          `, {
            class: "link social-profile",
            href: "https://www.instagram.com/coyote.drums/"
        }); %>
        <%- externalLink(`
            <span class="social-icon">${lazyImage({ src: '/images/coyote-drums/youtube-icon.svg' })}</span>
            <span role="heading" aria-level="3" class="h4">Youtube</span>
            <span class="h5">Coyote Drums</span>
          `, {
            class: "link social-profile",
            href: locals.coyoteDrums.youtube,
        }); %>
      </div>
    </section>

    <section>
      <header class="container">
        <h2>
          Playlists
        </h2>
      </header>
      <div class="container video-grid playlists">
        <button class="block link yt-modal-trigger" data-playlist-id="PLetKrknUS6uORehWMWAOfojlwXGCsUXZw">
          <%- lazyImage({ src: '/images/coyote-drums/drum-covers.webp' }); %>
          Drum Covers
        </button>
        <button class="block link yt-modal-trigger" data-playlist-id="PLetKrknUS6uPieWF-xk2z4-5O6Qknn9B9">
          <%- lazyImage({ src: '/images/coyote-drums/glow-sticks.webp' }); %>
          Glow Sticks
        </button>
      </div>
    </section>

    <%
      const videoTitle = (title, artist) => {
        if (artist) {
          return `
            <ul>
              <li>${noWidows(title)}</li>
              <li>By: ${artist}</li>
            </ul>
          `;
        }
        return title;
      };

      const videos = [
        {
          artist: "Underoath",
          title: "I don’t feel very receptive today",
          id: "loGe3CfA9r8",
          date: "2020-12-23"
        },
        {
          artist: "Queens of the Stone Age",
          title: "Song for the Dead",
          id: "ib--ZJhxoPU",
          date: "2020-12-23"
        },
        {
